<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysWarrantyMapper">

    <resultMap type="SysWarranty" id="SysWarrantyResult">
        <result property="warrantyId"    column="warranty_id"    />
        <result property="equipmentName"  column="equipment_name"  />
        <result property="equipmentLocation" column="equipment_location" />
        <result property="description"       column="description"       />
        <result property="reporterName"    column="reporter_name"    />
        <result property="reporterPhone"       column="reporter_phone"        />
        <result property="status"       column="status"        />
        <result property="createBy"     column="create_by"     />
        <result property="createTime"   column="create_time"   />
        <result property="updateBy"     column="update_by"     />
        <result property="updateTime"   column="update_time"   />
        <result property="remark"       column="remark"        />
    </resultMap>

    <sql id="selectWarrantyVo">
        select warranty_id, equipment_name, equipment_location, description, reporter_name, reporter_phone, status, create_by, create_time, update_by, update_time, remark from sys_warranty
    </sql>

    <select id="selectSysWarrantyList" parameterType="SysWarranty" resultMap="SysWarrantyResult">
        <include refid="selectWarrantyVo"/>
        <where>
            <if test="equipmentName != null  and equipmentName != ''"> and equipment_name like concat('%', #{equipmentName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectSysWarrantyById" parameterType="Long" resultMap="SysWarrantyResult">
        <include refid="selectWarrantyVo"/>
        where warranty_id = #{warrantyId}
    </select>

    <insert id="insertSysWarranty" parameterType="SysWarranty" useGeneratedKeys="true" keyProperty="warrantyId">
        insert into sys_warranty (
            <if test="equipmentName != null and equipmentName != ''">equipment_name,</if>
            <if test="equipmentLocation != null and equipmentLocation != ''">equipment_location,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="reporterName != null and reporterName != ''">reporter_name,</if>
            <if test="reporterPhone != null and reporterPhone != ''">reporter_phone,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time
        )values(
            <if test="equipmentName != null and equipmentName != ''">#{equipmentName},</if>
            <if test="equipmentLocation != null and equipmentLocation != ''">#{equipmentLocation},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="reporterName != null and reporterName != ''">#{reporterName},</if>
            <if test="reporterPhone != null and reporterPhone != ''">#{reporterPhone},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate()
        )
    </insert>

    <update id="updateSysWarranty" parameterType="SysWarranty">
        update sys_warranty
        <set>
            <if test="equipmentName != null and equipmentName != ''">equipment_name = #{equipmentName},</if>
            <if test="equipmentLocation != null and equipmentLocation != ''">equipment_location = #{equipmentLocation},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="reporterName != null and reporterName != ''">reporter_name = #{reporterName},</if>
            <if test="reporterPhone != null and reporterPhone != ''">reporter_phone = #{reporterPhone},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        where warranty_id = #{warrantyId}
    </update>

    <delete id="deleteSysWarrantyById" parameterType="Long">
        delete from sys_warranty where warranty_id = #{warrantyId}
    </delete>

    <delete id="deleteSysWarrantyByIds" parameterType="String">
        delete from sys_warranty where warranty_id in
        <foreach item="warrantyId" collection="array" open="(" separator="," close=")">
            #{warrantyId}
        </foreach>
    </delete>

</mapper>
