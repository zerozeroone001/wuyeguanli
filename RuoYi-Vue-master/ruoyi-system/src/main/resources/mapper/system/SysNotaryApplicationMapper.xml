    <sql id="selectSysNotaryApplicationVo">
        select notary_id, notary_no, title, type, status, urgent, description, contact_name, contact_phone, id_card, address, notary_office_id, user_id, progress, certificate_url, expected_time, apply_time, create_by, create_time, update_by, update_time, remark from sys_notary_application
    </sql>

    <select id="selectSysNotaryApplicationList" parameterType="SysNotaryApplication" resultMap="SysNotaryApplicationResult">
        <include refid="selectSysNotaryApplicationVo"/>
        <where>
            <if test="notaryNo != null  and notaryNo != ''"> and notary_no = #{notaryNo}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>

    <select id="selectSysNotaryApplicationByApplicationId" parameterType="Long" resultMap="SysNotaryApplicationResult">
        <include refid="selectSysNotaryApplicationVo"/>
        where notary_id = #{applicationId}
    </select>

