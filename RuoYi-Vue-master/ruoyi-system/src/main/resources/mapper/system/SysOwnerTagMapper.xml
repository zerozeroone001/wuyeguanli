<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysOwnerTagMapper">
    
    <resultMap type="SysOwnerTag" id="SysOwnerTagResult">
        <id property="tagId"    column="tag_id"    />
        <result property="tagName"    column="tag_name"    />
        <result property="tagIcon"    column="tag_icon"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysOwnerTagVo">
        select tag_id, tag_name, tag_icon, create_by, create_time, update_by, update_time, remark 
        from sys_owner_tag
    </sql>

    <select id="selectSysOwnerTagList" parameterType="SysOwnerTag" resultMap="SysOwnerTagResult">
        <include refid="selectSysOwnerTagVo"/>
        <where>  
            <if test="tagName != null  and tagName != ''"> and tag_name like concat('%', #{tagName}, '%')</if>
            <if test="tagIcon != null  and tagIcon != ''"> and tag_icon = #{tagIcon}</if>
        </where>
        order by tag_id desc
    </select>
    
    <select id="selectSysOwnerTagByTagId" parameterType="Long" resultMap="SysOwnerTagResult">
        <include refid="selectSysOwnerTagVo"/>
        where tag_id = #{tagId}
    </select>
        
    <insert id="insertSysOwnerTag" parameterType="SysOwnerTag" useGeneratedKeys="true" keyProperty="tagId">
        insert into sys_owner_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">tag_name,</if>
            <if test="tagIcon != null and tagIcon != ''">tag_icon,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">#{tagName},</if>
            <if test="tagIcon != null and tagIcon != ''">#{tagIcon},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysOwnerTag" parameterType="SysOwnerTag">
        update sys_owner_tag
        <trim prefix="SET" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">tag_name = #{tagName},</if>
            <if test="tagIcon != null and tagIcon != ''">tag_icon = #{tagIcon},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where tag_id = #{tagId}
    </update>

    <delete id="deleteSysOwnerTagByTagId" parameterType="Long">
        delete from sys_owner_tag where tag_id = #{tagId}
    </delete>

    <delete id="deleteSysOwnerTagByTagIds" parameterType="String">
        delete from sys_owner_tag where tag_id in 
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>
</mapper>
