<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.EstatePropertyMapper">
    
    <resultMap type="EstateProperty" id="EstatePropertyResult">
        <result property="propertyId"    column="property_id"    />
        <result property="communityId"    column="community_id"    />
        <result property="communityName"    column="community_name"    />
        <result property="communityAddress"    column="community_address"    />
        <result property="buildingName"    column="building_name"    />
        <result property="unitName"    column="unit_name"    />
        <result property="roomNumber"    column="room_number"    />
        <result property="floor"    column="floor"    />
        <result property="area"    column="area"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectEstatePropertyVo">
        select p.property_id, p.community_id, c.community_name, c.address as community_address, p.building_name, p.unit_name, p.room_number, p.floor, p.area, p.status, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark
        from sys_estate_property p
        left join sys_estate_community c on p.community_id = c.community_id
    </sql>

    <select id="selectEstatePropertyList" parameterType="EstateProperty" resultMap="EstatePropertyResult">
        <include refid="selectEstatePropertyVo"/>
        <where>  
            <if test="communityId != null "> and p.community_id = #{communityId}</if>
            <if test="buildingName != null  and buildingName != ''"> and p.building_name like concat('%', #{buildingName}, '%')</if>
            <if test="unitName != null  and unitName != ''"> and p.unit_name like concat('%', #{unitName}, '%')</if>
            <if test="roomNumber != null  and roomNumber != ''"> and p.room_number = #{roomNumber}</if>
            <if test="floor != null "> and p.floor = #{floor}</if>
            <if test="area != null "> and p.area = #{area}</if>
            <if test="status != null  and status != ''"> and p.status = #{status}</if>
        </where>
    </select>
    
    <select id="selectEstatePropertyByPropertyId" parameterType="Long" resultMap="EstatePropertyResult">
        <include refid="selectEstatePropertyVo"/>
        where p.property_id = #{propertyId}
    </select>

    <insert id="insertEstateProperty" parameterType="EstateProperty" useGeneratedKeys="true" keyProperty="propertyId">
        insert into sys_estate_property
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="communityId != null">community_id,</if>
            <if test="buildingName != null and buildingName != ''">building_name,</if>
            <if test="unitName != null">unit_name,</if>
            <if test="roomNumber != null and roomNumber != ''">room_number,</if>
            <if test="floor != null">floor,</if>
            <if test="area != null">area,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="communityId != null">#{communityId},</if>
            <if test="buildingName != null and buildingName != ''">#{buildingName},</if>
            <if test="unitName != null">#{unitName},</if>
            <if test="roomNumber != null and roomNumber != ''">#{roomNumber},</if>
            <if test="floor != null">#{floor},</if>
            <if test="area != null">#{area},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateEstateProperty" parameterType="EstateProperty">
        update sys_estate_property
        <trim prefix="SET" suffixOverrides=",">
            <if test="communityId != null">community_id = #{communityId},</if>
            <if test="buildingName != null and buildingName != ''">building_name = #{buildingName},</if>
            <if test="unitName != null">unit_name = #{unitName},</if>
            <if test="roomNumber != null and roomNumber != ''">room_number = #{roomNumber},</if>
            <if test="floor != null">floor = #{floor},</if>
            <if test="area != null">area = #{area},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where property_id = #{propertyId}
    </update>

    <delete id="deleteEstatePropertyByPropertyId" parameterType="Long">
        delete from sys_estate_property where property_id = #{propertyId}
    </delete>

    <delete id="deleteEstatePropertyByPropertyIds" parameterType="String">
        delete from sys_estate_property where property_id in
        <foreach item="propertyId" collection="array" open="(" separator="," close=")">
            #{propertyId}
        </foreach>
    </delete>

    <select id="selectBuildingNamesByCommunityId" parameterType="Long" resultType="String">
        select distinct building_name
        from sys_estate_property
        where community_id = #{communityId} and del_flag = '0'
        order by building_name
    </select>

    <select id="selectRoomNumbersByBuildingName" resultType="String">
        select distinct p.room_number
        from sys_estate_property p
        left join sys_estate_user_property eup on p.property_id = eup.property_id
        and eup.del_flag = '0'
        where p.community_id = #{communityId}
        and p.building_name = #{buildingName}
        and p.del_flag = '0'
        <!-- Filter out rooms that are already bound to a user, unless it's the current owner (if ownerId provided) -->
        <!-- Logic: If eup.user_id is NOT NULL, it means the room is taken. -->
        <!-- We want rooms where (eup.user_id IS NULL) OR (eup.user_id IS NOT NULL AND currentOwnerId matches) -->
        <!-- However, parameter is ownerId (from profile). We need userId from ownerId to be precise, or just simplify. -->
        <!-- Simplified: Just show all rooms, let validation handle assignment. Or if filtering is strict requirement: -->
        <!-- Since we don't have easy userId here without joining profile again properly... -->
        <!-- Let's return all rooms for now to fix the SQL error. Filtering occupied rooms is better done in business logic or with a proper join on user_property. -->
        order by p.room_number
    </select>

    <select id="selectPropertyIdByDetails" resultType="Long">
        select property_id
        from sys_estate_property
        where community_id = #{communityId}
          and building_name = #{buildingName}
          and room_number = #{roomNumber}
          and (del_flag = '0' OR del_flag IS NULL)
        limit 1
    </select>
</mapper>
