<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysEstateUserApplyMapper">
    
    <resultMap type="SysEstateUserApply" id="SysEstateUserApplyResult">
        <id property="applyId"    column="apply_id"    />
        <result property="userId"    column="user_id"    />
        <result property="buildingName"    column="building_name"    />
        <result property="propertyId"    column="property_id"    />
        <result property="communityId"    column="community_id"    />
        <result property="userType"    column="user_type"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="ownerName"    column="owner_name"    />
        <result property="ownerPhone"    column="owner_phone"    />
        <result property="communityName"    column="community_name"    />
        <result property="roomNumber"    column="room_number"    />
        <result property="buildingNameStr"    column="building_str"    />
    </resultMap>

    <sql id="selectSysEstateUserApplyVo">
        select apply_id, user_id, building_name, property_id, community_id, user_type, status, del_flag, create_by, create_time, update_by, update_time, remark from sys_estate_user_apply
    </sql>

    <select id="selectSysEstateUserApplyList" parameterType="SysEstateUserApply" resultMap="SysEstateUserApplyResult">
        select a.apply_id, a.user_id, a.building_name, a.property_id, a.community_id, a.user_type, a.status, a.del_flag, a.create_by, a.create_time, a.update_by, a.update_time, a.remark,
        u.nick_name as owner_name, u.phonenumber as owner_phone, c.community_name, p.room_number, p.building_name as building_str
        from sys_estate_user_apply a
        left join sys_user u on a.user_id = u.user_id
        left join sys_estate_community c on a.community_id = c.community_id
        left join sys_estate_property p on a.property_id = p.property_id
        <where>
            <if test="userId != null "> and a.user_id = #{userId}</if>
            <if test="communityId != null "> and a.community_id = #{communityId}</if>
            <if test="propertyId != null "> and a.property_id = #{propertyId}</if>
            <if test="buildingName != null "> and a.building_name = #{buildingName}</if>
            <if test="userType != null  and userType != ''"> and a.user_type = #{userType}</if>
            <if test="status != null  and status != ''"> and a.status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysEstateUserApplyByApplyId" parameterType="Long" resultMap="SysEstateUserApplyResult">
        <include refid="selectSysEstateUserApplyVo"/>
        where apply_id = #{applyId}
    </select>
        
    <insert id="insertSysEstateUserApply" parameterType="SysEstateUserApply" useGeneratedKeys="true" keyProperty="associationId">
        insert into sys_estate_user_apply
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="applyId != null">apply_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="buildingName != null">building_name,</if>
            <if test="propertyId != null">property_id,</if>
            <if test="communityId != null">community_id,</if>
            <if test="userType != null">user_type,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="applyId != null">#{applyId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="buildingName != null">#{buildingName},</if>
            <if test="propertyId != null">#{propertyId},</if>
            <if test="communityId != null">#{communityId},</if>
            <if test="userType != null">#{userType},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysEstateUserApply" parameterType="SysEstateUserApply">
        update sys_estate_user_apply
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="buildingName != null">building_name = #{buildingName},</if>
            <if test="propertyId != null">property_id = #{propertyId},</if>
            <if test="communityId != null">community_id = #{communityId},</if>
            <if test="userType != null">user_type = #{userType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where apply_id = #{applyId}
    </update>

    <delete id="deleteSysEstateUserApplyByApplyId" parameterType="Long">
        delete from sys_estate_user_apply where apply_id = #{applyId}
    </delete>

    <delete id="deleteSysEstateUserApplyByApplyIds" parameterType="String">
        delete from sys_estate_user_apply where apply_id in 
        <foreach item="applyId" collection="array" open="(" separator="," close=")">
            #{applyId}
        </foreach>
    </delete>

    <select id="countPendingOrApprovedApply" parameterType="SysEstateUserApply" resultType="int">
        select count(1) from sys_estate_user_apply
        <where>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="propertyId != null"> and property_id = #{propertyId}</if>
            and status IN ('0', '1')
        </where>
    </select>
</mapper>