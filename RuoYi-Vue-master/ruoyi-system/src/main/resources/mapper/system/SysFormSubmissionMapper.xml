<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysFormSubmissionMapper">

    <resultMap id="SysFormSubmissionResult" type="SysFormSubmission">
        <id property="submissionId" column="submission_id"/>
        <result property="formId" column="form_id"/>
        <result property="pollId" column="poll_id"/>
        <result property="userId" column="user_id"/>
        <result property="communityId" column="community_id"/>
        <result property="clientType" column="client_type"/>
        <result property="submitIp" column="submit_ip"/>
        <result property="status" column="status"/>
        <result property="answersData" column="answers_data"/>
        <result property="submitTime" column="submit_time"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <!-- 用户信息扩展字段 -->
        <result property="userName" column="user_name"/>
        <result property="nickName" column="nick_name"/>
        <result property="phonenumber" column="phonenumber"/>
        <result property="communityName" column="community_name"/>
        <result property="buildingName" column="building_name"/>
        <result property="unitName" column="unit_name"/>
        <result property="roomNumber" column="room_number"/>
    </resultMap>

    <sql id="selectSysFormSubmissionColumns">
        select s.submission_id,
               s.form_id,
               s.poll_id,
               s.user_id,
               s.community_id,
               s.client_type,
               s.submit_ip,
               s.status,
               s.answers_data,
               s.submit_time,
               s.create_by,
               s.create_time,
               s.update_by,
               s.update_time,
               s.remark,
               u.user_name,
               u.nick_name,
               u.phonenumber,
               c.community_name,
               '' as building_name,
               '' as unit_name,
               '' as room_number
          from sys_form_submission s
          left join sys_user u on s.user_id = u.user_id
          left join sys_estate_community c on s.community_id = c.community_id
    </sql>

    <select id="selectSysFormSubmissionList" parameterType="SysFormSubmission" resultMap="SysFormSubmissionResult">
        <include refid="selectSysFormSubmissionColumns"/>
        <where>
            <if test="formId != null">
                and s.form_id = #{formId}
            </if>
            <if test="pollId != null">
                and s.poll_id = #{pollId}
            </if>
            <if test="userId != null">
                and u.user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                and s.status = #{status}
            </if>
        </where>
        order by s.submit_time desc, s.submission_id desc
    </select>

    <select id="selectSysFormSubmissionBySubmissionId" parameterType="Long" resultMap="SysFormSubmissionResult">
        <include refid="selectSysFormSubmissionColumns"/>
        where s.submission_id = #{submissionId}
    </select>

    <select id="selectByPollIdAndUserId" resultMap="SysFormSubmissionResult">
        <include refid="selectSysFormSubmissionColumns"/>
        where s.poll_id = #{pollId}
          and u.user_id = #{userId}
        limit 1
    </select>

    <insert id="insertSysFormSubmission" parameterType="SysFormSubmission" useGeneratedKeys="true" keyProperty="submissionId">
        insert into sys_form_submission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="formId != null">form_id,</if>
            <if test="pollId != null">poll_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="communityId != null">community_id,</if>
            <if test="clientType != null">client_type,</if>
            <if test="submitIp != null">submit_ip,</if>
            <if test="status != null">status,</if>
            <if test="answersData != null">answers_data,</if>
            <if test="submitTime != null">submit_time,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="formId != null">#{formId},</if>
            <if test="pollId != null">#{pollId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="communityId != null">#{communityId},</if>
            <if test="clientType != null">#{clientType},</if>
            <if test="submitIp != null">#{submitIp},</if>
            <if test="status != null">#{status},</if>
            <if test="answersData != null">#{answersData},</if>
            <if test="submitTime != null">#{submitTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateSysFormSubmission" parameterType="SysFormSubmission">
        update sys_form_submission
        <trim prefix="set" suffixOverrides=",">
            <if test="formId != null">form_id = #{formId},</if>
            <if test="pollId != null">poll_id = #{pollId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="communityId != null">community_id = #{communityId},</if>
            <if test="clientType != null">client_type = #{clientType},</if>
            <if test="submitIp != null">submit_ip = #{submitIp},</if>
            <if test="status != null">status = #{status},</if>
            <if test="answersData != null">answers_data = #{answersData},</if>
            <if test="submitTime != null">submit_time = #{submitTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where submission_id = #{submissionId}
    </update>

    <delete id="deleteSysFormSubmissionBySubmissionId" parameterType="Long">
        delete from sys_form_submission where submission_id = #{submissionId}
    </delete>

    <delete id="deleteSysFormSubmissionBySubmissionIds" parameterType="Long">
        delete from sys_form_submission where submission_id in
        <foreach collection="array" item="submissionId" open="(" separator="," close=")">
            #{submissionId}
        </foreach>
    </delete>

</mapper>
